<div class="hpmcq-inner component-inner" role="region" aria-label="{{_globals._components._hpmcq.ariaRegion}}" {{#if _globals._components._hpmcq.ariaRegion}}tabindex="0"{{/if}}>
    {{> component this}}
    <div class="hpmcq-widget component-widget {{#unless _isEnabled}} disabled {{#if _isInteractionComplete}} complete submitted show-user-answer {{#if _isCorrect}}correct{{/if}} {{/if}} {{/unless}}">
        {{#each _items}}
        <div class="hpmcq-item component-item component-item-color {{#unless ../_isEnabled}}{{#if ../_canShowMarking}}{{#if _isCorrect}}correct{{else}}incorrect{{/if}}{{/if}}{{/unless}} item-{{@index}}">
            <input type="checkbox" id="{{../_id}}-{{@index}}"{{#unless ../_isEnabled}} disabled{{/unless}}/>
            <label id="{{../_id}}-{{@index}}-aria" for="{{../_id}}-{{@index}}" class="component-item-text-color component-item-border{{#unless ../_isEnabled}} disabled {{/unless}}{{#if _isSelected}} selected{{/if}}">
                <div class="hpmcq-item-state">
                    <div class="hpmcq-item-icon hpmcq-answer-icon {{#if ../_isRadio}}radio{{else}}checkbox{{/if}} component-item-text-color icon"></div>
                    <div class="hpmcq-item-icon hpmcq-correct-icon icon icon-tick"></div>
                    <div class="hpmcq-item-icon hpmcq-incorrect-icon icon icon-cross"></div>
                </div>
                <div class="hpmcq-item-inner">
                    {{{text}}}
                </div>
            </label>
        </div>
        {{/each}}
    </div>
    <!-- <div class="buttons"></div> -->
</div>
